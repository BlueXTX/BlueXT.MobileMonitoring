{
  "UseInMemoryDatabase": true,
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            },
            {
              "Name": "File",
              "Args": {
                "path": "%TEMP%/Logs/BlueXT.MobileMonitoring.HttpApi.Host/log.dev.txt"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  }
}
